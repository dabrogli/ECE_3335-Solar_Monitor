import serial
import csv
from datetime import datetime, timedelta
import pandas as pd
import matplotlib.pyplot as plt
import matplotlib.animation as animation
import matplotlib.dates as mdates
import threading

arduino_port = '/dev/ttyUSB0'
baud_rate = 9600
csv_file = "data.csv"

# Load precomputed GHI statistics
ghi_stats_file = '/mnt/data/dontuse2.xlsx'  # Replace with your file path if different
ghi_sheet_name = '561994_33.61_-102.02_tdy-2022'

ghi_data = pd.read_excel(ghi_stats_file, sheet_name=ghi_sheet_name, skiprows=3, header=None)
ghi_data.columns = [
    'Year', 'Month', 'Day', 'Hour', 'Minute', 'GHI', 'DHI', 'DNI', 
    'Other1', 'Other2', 'Other3', 'Other4', 'Other5', 'Other6', 
    'Other7', 'Other8', 'Other9', 'Other10', 'Other11', 'Other12'
]
ghi_data['Datetime'] = pd.to_datetime(ghi_data[['Year', 'Month', 'Day', 'Hour', 'Minute']])
ghi_data = ghi_data.set_index('Datetime')[['GHI']]
ghi_data['Time of Day'] = ghi_data.index.time
ghi_stats = ghi_data.groupby('Time of Day')['GHI'].agg(['mean', 'std'])
ghi_stats['mean+std'] = ghi_stats['mean'] + ghi_stats['std']
ghi_stats['mean-std'] = ghi_stats['mean'] - ghi_stats['std']
ghi_stats['mean-std'] = ghi_stats['mean-std'].clip(lower=0)  # Ensure no negative values

# Serial connection
ser = serial.Serial(arduino_port, baud_rate, timeout=1)

with open(csv_file, mode='w', newline='') as file:
    writer = csv.writer(file)
    writer.writerow(["Timestamp", "Temperature", "Irradiance", "Power", "Efficiency"])

fig, axs = plt.subplots(2, 2, figsize=(14, 10))
fig.suptitle("Real-Time Sensor Data", fontsize=16, fontweight='bold')

colors = ['blue', 'green', 'orange', 'red']
titles = ["Temperature Over Time", "Irradiance Over Time", "Power Over Time", "Efficiency Over Time"]
y_labels = ["Temperature (°C)", "Irradiance (W/m²)", "Power (W)", "Efficiency (%)"]
lines = []

for ax, color, title, y_label in zip(axs.flatten(), colors, titles, y_labels):
    line, = ax.plot([], [], color=color)
    ax.set_title(title, fontsize=14, fontweight='bold', pad=20)
    ax.set_ylabel(y_label, fontsize=12)
    ax.set_ylim(0, None)  # Minimum value is fixed at 0
    ax.grid(True)
    lines.append(line)

axs[1, 0].set_xlabel("Time", fontsize=12)
axs[1, 1].set_xlabel("Time", fontsize=12)

# Add GHI stats lines to the Irradiance graph
irradiance_ax = axs[0, 1]  # Assuming Irradiance is the second plot
ghi_stats_index = pd.to_datetime(ghi_stats.index, format='%H:%M:%S').time

irradiance_ax.plot(ghi_stats_index, ghi_stats['mean'], color='cyan', label='Average Irradiance')
irradiance_ax.plot(ghi_stats_index, ghi_stats['mean+std'], color='cyan', linestyle='dotted', label='Mean + Std Dev')
irradiance_ax.plot(ghi_stats_index, ghi_stats['mean-std'], color='cyan', linestyle='dotted', label='Mean - Std Dev')
irradiance_ax.legend(loc='upper left')

start_time = None

def determine_window_size(start_time, current_time):
    elapsed_time = (current_time - start_time).total_seconds()
    if elapsed_time <= 60:
        return timedelta(minutes=1)
    elif elapsed_time <= 600:
        return timedelta(minutes=10)
    elif elapsed_time <= 3600:
        return timedelta(hours=1)
    elif elapsed_time <= 86400:
        return timedelta(hours=12)
    else:
        return timedelta(days=1)

def update(frame):
    global start_time
    try:
        data = pd.read_csv(csv_file)

        if data.empty:
            return

        timestamps = pd.to_datetime(data["Timestamp"])
        temperature = data["Temperature"]
        irradiance = data["Irradiance"]
        power = data["Power"]
        efficiency = data["Efficiency"]

        if start_time is None and not timestamps.empty:
            start_time = timestamps.iloc[0]

        current_time = datetime.now()
        window_size = determine_window_size(start_time, current_time)
        window_start = current_time - window_size

        mask = (timestamps >= window_start) & (timestamps <= current_time)
        timestamps_window = timestamps[mask]
        temperature_window = temperature[mask]
        irradiance_window = irradiance[mask]
        power_window = power[mask]
        efficiency_window = efficiency[mask]

        if timestamps_window.empty:
            return

        for line, y_data in zip(lines, [temperature_window, irradiance_window, power_window, efficiency_window]):
            line.set_data(timestamps_window, y_data)

        for ax, y_data in zip(axs.flatten(), [temperature_window, irradiance_window, power_window, efficiency_window]):
            ax.set_xlim(window_start, current_time)
            ax.set_ylim(0, y_data.max() * 1.1)  # Keep minimum at 0, dynamically adjust maximum with 10% margin
            ax.relim()
            ax.autoscale_view()
            ax.xaxis.set_major_formatter(mdates.DateFormatter('%H:%M:%S'))
            for label in ax.get_xticklabels():
                label.set_rotation(45)
    except Exception as e:
        print(f"Error updating plot: {e}")

ani = animation.FuncAnimation(fig, update, interval=1000)

def read_serial_data():
    try:
        with open(csv_file, mode='a', newline='') as file:
            writer = csv.writer(file)
            while True:
                line = ser.readline().decode('utf-8').strip()
                print(f"Received: {line}")
                if not line or "Temperature ->" not in line:
                    continue
                try:
                    temp = float(line.split("Temperature ->")[1].split("C")[0].strip())
                    irr = float(line.split("Irradience ->")[1].split("mW/cm^2")[0].strip())
                    power = float(line.split("Power ->")[1].split("W")[0].strip())
                    eff = float(line.split("Efficiency ->")[1].split("%")[0].strip())
                    timestamp = datetime.now().strftime('%Y-%m-%d %H:%M:%S')
                    writer.writerow([timestamp, temp, irr, power, eff])
                    file.flush()
                except Exception as e:
                    print(f"Error parsing line: {line} | {e}")
    except KeyboardInterrupt:
        print("Exiting...")
    finally:
        ser.close()

thread = threading.Thread(target=read_serial_data, daemon=True)
thread.start()

plt.show()
